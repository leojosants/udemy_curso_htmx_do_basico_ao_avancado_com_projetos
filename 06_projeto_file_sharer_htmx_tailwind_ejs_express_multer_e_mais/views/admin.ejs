<div class="container mx-auto p-4">
	<h2 class="text-2xl font-bold mb-4 text-center">Página de adminstração</h2>
	<form
		hx-post="http://localhost:3000/admin/upload"
		hx-target="#msg"
		class="max-w-sm mx-auto"
	>
		<div class="mb-4">
			<label for="nome" class="block text-gray-700 text-sm font-bold mb-2">
				Nome do arquivo
			</label>
			<input
				type="text"
				name="nome"
				id="nome"
				class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700"
			/>
		</div>
		<div class="mb-4">
			<label
				for="descricao"
				class="block text-gray-700 text-sm font-bold mb-2"
			>
				Descrição
			</label>
			<textarea
				name="descricao"
				id="descricao"
				class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700"
			>
			</textarea>
		</div>
		<div class="mb-4">
			<label
				for="arquivo"
				class="block text-gray-700 text-sm font-bold mb-2"
			>
				Selecione o arquivo
			</label>
			<input type="file" name="arquivo" id="arquivo" />
		</div>
		<button
			class="bg-indigo-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
		>
			Enviar
		</button>
	</form>
	<div id="file-list" hx-get="/admin/fetch-files" hx-trigger="load"></div>
</div>
